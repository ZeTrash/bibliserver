<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bibliserver.controller.BooksController"
      style="-fx-padding: 20;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Gestion des Livres" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Rechercher un livre..." prefWidth="250"/>
        <Button text="Rechercher" onAction="#handleSearch"/>
        <Button text="Nouveau Livre" onAction="#showAddBookDialog"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="booksTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn" text="Titre" prefWidth="250"/>
            <TableColumn fx:id="authorColumn" text="Auteur" prefWidth="200"/>
            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120"/>
            <TableColumn fx:id="publisherColumn" text="Éditeur" prefWidth="150"/>
            <TableColumn fx:id="yearColumn" text="Année" prefWidth="80"/>
            <TableColumn fx:id="quantityColumn" text="Quantité" prefWidth="80"/>
            <TableColumn fx:id="availableColumn" text="Disponible" prefWidth="80"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Dialogue d'ajout/modification de livre -->
    <Dialog fx:id="bookDialog" headerText="Ajouter/Modifier un Livre">
        <dialogPane>
            <DialogPane>
                <content>
                    <GridPane hgap="10" vgap="10">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Auteur:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Éditeur:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="publisherField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Année:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="Quantité:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <Spinner fx:id="quantitySpinner" min="1" max="100" initialValue="1"
                                GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    </GridPane>
                </content>
                <buttonTypes>
                    <ButtonType fx:constant="OK"/>
                    <ButtonType fx:constant="CANCEL"/>
                </buttonTypes>
            </DialogPane>
        </dialogPane>
    </Dialog>

</VBox> 